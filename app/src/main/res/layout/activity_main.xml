<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    tools:context=".activity.main.MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:paddingBottom="120dp"
            android:layout_height="wrap_content">

            <com.funnco.secondcustomlearn.view.ArcProgress1.ArcProgressSelfUpdate
                android:id="@+id/arcProgress1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="120dp"
                app:customColor="@color/purple_500"
                app:customStyle="fill"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.funnco.secondcustomlearn.view.ArcProgress2.ArcProgress
                android:id="@+id/arcProgress2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="120dp"
                app:customColor="@color/purple_500"
                app:customStyle="stroke"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/arcProgress1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_randomize1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="48dp"
                android:text="Randomize"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="@+id/arcProgress2"
                app:layout_constraintStart_toStartOf="@+id/arcProgress2"
                app:layout_constraintTop_toBottomOf="@+id/arcProgress2" />

            <com.funnco.secondcustomlearn.view.BarProgress1.BarProgressHorizontal
                android:id="@+id/barProgress"
                android:layout_width="360dp"
                android:layout_height="24dp"
                android:layout_marginTop="120dp"
                app:customRectColor="@color/purple_500"
                app:customStyle="stroke"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_randomize1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_randomize2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingHorizontal="48dp"
                android:layout_marginTop="12dp"
                android:text="Randomize"
                android:textAllCaps="false"
                app:layout_constraintEnd_toEndOf="@+id/barProgress"
                app:layout_constraintStart_toStartOf="@+id/barProgress"
                app:layout_constraintTop_toBottomOf="@+id/barProgress" />

            <com.funnco.secondcustomlearn.view.CoffeeProgress.CoffeeProgress
                android:id="@+id/coffeeProgress1"
                android:layout_width="240dp"
                android:layout_height="240dp"
                android:layout_marginTop="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_randomize2"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_randomize3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="48dp"
                android:text="Randomize"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@id/coffeeProgress1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_gotoholder1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:paddingHorizontal="48dp"
                android:text="first"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/button_randomize3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_gotoholder2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:paddingHorizontal="48dp"
                android:text="second"
                android:textAllCaps="false"
                app:layout_constraintTop_toBottomOf="@+id/button_gotoholder1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>